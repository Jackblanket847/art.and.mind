│   │   └── feedback.html     # Feedback form
│   ├── css/
│   │   └── styles.css
│   ├── js/
│   │   ├── forms.js          # Handle form validation/storage
│   │   └── analytics.js      # Chart.js-based analytics
│   └── assets/
│       ├── images/           # Logos, event photos
│       └── docs/             # Flyers, PDFs
│
├── data/
│   ├── signups.json          # Volunteer sign-ups
│   ├── donations.json        # Donation logs (or API connection later)
│   └── feedback.json         # Community feedback
│
├── analytics/
